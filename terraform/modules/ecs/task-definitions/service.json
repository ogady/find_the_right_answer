[
  {
    "name": "FTRA-container",
    "cpu": 20,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/FTRA-API-datadog-task",
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "memoryReservation": 256,
    "portMappings": [
      {
        "hostPort": 80,
        "protocol": "tcp",
        "containerPort": 80
      }
    ],
    "environment": [
      {
        "name": "ENV",
        "value": "prod"
      }
    ],
    "image": "${image-repository}",
    "essential": true,
    "dockerLabels": {
      "com.datadoghq.ad.instances": "[{\"host\": \"%%host%%\", \"port\": 80}]",
      "com.datadoghq.ad.check_names": "[\"FTRA-container\"]",
      "com.datadoghq.ad.init_configs": "[{}]"
    }
  },
  {
    "name": "datadog-agent",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/FTRA-API-datadog-task",
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "portMappings": [
      {
        "hostPort": 8126,
        "protocol": "tcp",
        "containerPort": 8126
      }
    ],
    "environment": [
      {
        "name": "DD_API_KEY",
        "value": "${dd-agent-key}"
      },
      {
        "name": "DD_APM_ENABLED",
        "value": "true"
      },
      {
        "name": "DD_APM_NON_LOCAL_TRAFFIC",
        "value": "true"
      },
      {
        "name": "DD_PROCESS_AGENT_ENABLED",
        "value": "true"
      },
      {
        "name": "ECS_FARGATE",
        "value": "true"
      }
    ],
    "image": "datadog/agent:latest",
    "essential": true,
    "cpu": 10,
    "memoryReservation": 256
  }
]
